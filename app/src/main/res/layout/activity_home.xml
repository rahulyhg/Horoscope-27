<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/main_background"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context=".Home">

    <LinearLayout
        android:id="@+id/air_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/eight_dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >


        <Button
            android:id="@+id/aquarius"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"
            />


        <Button
            android:id="@+id/gemini"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"
            />


        <Button
            android:id="@+id/libra"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/earth_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/eight_dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/capricorn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/taurus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/virgo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fire_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/eight_dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/aries"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/leo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/sagittarius"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/water_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/eight_dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/pisces"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/scorpio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/cancer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/four_dp"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>
